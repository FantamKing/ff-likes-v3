{
  "version": 2,
  "builds": [
    {
      "src": "*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "crons": [
    {
      "path": "/refresh-tokens",
      "schedule": "0 * * * *"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  }
}
